extends layout

block content
    h2.page-header Register
    p Please register using the form below
    form(method='post', action='/user/register', enctype='multipart/form-data')
        .form-group
        label Name
        input.form-control(name='name', type='text',placeholder='Enter name')
        .form-group
        label Email
        input.form-control(name='email', type='text',placeholder='Enter Email')
        .form-group
        label Username
        input.form-control(name='username', type='text',placeholder='Enter User name')
        .form-group
        label Password
        input.form-control(name='password', type='password',placeholder='Enter Password')
        .form-group
        label Confirm Password
        input.form-control(name='password2', type='password',placeholder='Confirm Password')
        .form-group
        label Profile Image
        input.form-control(name='profileimage', type='file')
    input.btn.btn-primary(type = 'submit', name = 'submit', value='Register')